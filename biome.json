{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "linter": {
    "rules": {
      "correctness": {
        "useUniqueElementIds": "off",
        "noUnusedImports": "warn",
        "noUnknownProperty": "warn"
      },
      "suspicious": {
        "noUnknownAtRules": "off",
        "noArrayIndexKey": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "lineWidth": 90,
      "trailingCommas": "es5",
      "lineEnding": "lf",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}
